<% if @paintings.length != 0 %>
  <% if params[:query].present? %>
    <h1 class="index-title" id="search-index-heading">Your Search Results for: <%= params[:query] %></h1>
  <% else %>
    <h1 class="index-title" id="search-index-heading">Explore our paintings:</h1>
  <% end %>
  <div class="cards">
    <% @paintings.each do |painting| %>
      <%= link_to painting_path(painting) do %>
        <div class="painting-card">
          <%= cl_image_tag painting.photos.first.data %>
          <!-- <img src="<%#=painting.photos.first%>" > -->
          <div class="painting-card-infos">
            <div>
              <h3><%=painting.name%></h3>
              <p><%=painting.year%></p>
            </div>
             <h2 class="painting-pricing">$<%=painting.price %></h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <%= render "noresults" %>
<% end %>
